<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otpConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".uis.Image_check">


    <ImageView
        android:id="@+id/capturedImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/typeSinnerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/capturedImg"
        >

        <TextView
            android:id="@+id/typeSinnerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Plant type"
            android:layout_marginStart="40dp"
            android:textSize="15dp"
            android:padding="10dp"
            />

        <Spinner
            android:id="@+id/typeSpinner"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:padding="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rootTypeSinnerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:visibility="gone"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/typeSinnerLayout"
        >

        <TextView
            android:id="@+id/rootTypeSinnerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Root Type"
            android:textSize="15dp"
            android:layout_marginStart="40dp"
            android:padding="10dp"
            />

        <Spinner
            android:id="@+id/rootTypeSpinner"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnRelative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/capturedImg"
        >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/btnRelative6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/capturedImg"
        >



    <LinearLayout
        android:id="@+id/btnRelative3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/capturedImg"
        >

    <TextView
        android:id="@+id/palantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Local name"
        android:textSize="10dp"
        android:padding="10dp"
        />
        <TextView
            android:id="@+id/scientificName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Scientific name"
            android:textSize="10dp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/familyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Family name"
            android:textSize="10dp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/englishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="English name"
            android:textSize="10dp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/edibleParts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Edible parts"
            android:textSize="10dp"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Description"
            android:textSize="10dp"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Ayurvedic usage"
            android:textSize="10dp"
            android:padding="10dp"
            android:layout_marginTop="80dp"
            />




    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnRelative4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/capturedImg"
        >

        <TextView
            android:id="@+id/palantNameAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="10dp"
            android:padding="10dp"
            android:text="Akkapana"
            />
        <TextView
            android:id="@+id/scientificNameAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="10dp"
            android:padding="10dp"
            android:text="Kalanchoe laciniata"
            />
        <TextView
            android:id="@+id/familyNameAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="10dp"
            android:padding="10dp"
            android:text="CRASSULACEAE"
            />
        <TextView
            android:id="@+id/englishNameAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="10dp"
            android:padding="10dp"
            android:text="Cathedral bells"
            />

        <TextView
            android:id="@+id/ediblePartsAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="10dp"
            android:padding="10dp"
            android:text="Leaves"
            />

        <TextView
            android:id="@+id/descriptionAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="10dp"
            android:padding="10dp"
            android:text="This plant grows in the law country dry zone of Sri Lanka. Perennial herb, about one m tall, glabrous; stems stout. Leaves bipinnatifid, verySucculent, 7.5-10 cm long, up to 20 cm wide; petiole-like base 2-4(-6) cm long. Inflorescence 12-25 cm long; cymose; cymes lax, many flowered. Flowers Yello; pedice 16-9 mm long; corolla tube 5-6 mm long. Fruit a follicle, 0. 8-1cm long."
            />

        <TextView
            android:id="@+id/usageAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="10dp"
            android:padding="10dp"
            android:text="
Treatment for: It is applied to wounds and contusions. It is said to prevent swelling and discolouration and heal wounds. The juice of the leaves is given internally for kidney stones.Parts used in treatment: Leaves"
            />


            </LinearLayout>



         </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/shareBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="320dp"
        android:padding="20dp"
        android:background="@drawable/ic_share"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/identifyBtn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_corner_radius"
        android:elevation="24dp"
        android:text="Identify"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/colorGreen"/>

</androidx.constraintlayout.widget.ConstraintLayout>